<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title"></include>

    <auto.cn.appinspection.ui.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_more_regist"
                android:layout_width="match_parent"
                android:text="用户注册"
                android:drawableLeft="@mipmap/icon_more_regist"
                style="@style/MoreTextStyle"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_line"></View>
                <TextView
                    style="@style/MoreTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:drawableLeft="@mipmap/icon_more_secret"
                    android:text="检查版本" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_line"></View>

            <TextView
                android:id="@+id/tv_more_reset"
                android:text="NFC功能"
                android:drawableLeft="@mipmap/icon_more_reset"
                android:layout_width="match_parent"
                style="@style/MoreTextStyle" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_line"></View>

            <RelativeLayout
                android:id="@+id/rl_more_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="联系客服"
                    android:drawableLeft="@mipmap/icon_more_contact"
                    android:layout_width="wrap_content"
                    style="@style/MoreTextStyle" />

                <TextView
                    android:id="@+id/tv_more_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0531-77920678"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="20sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_line"></View>
            <TextView
                android:id="@+id/tv_more_feedback"
                android:text="用户反馈"
                android:drawableLeft="@mipmap/icon_more_sms"
                android:layout_width="match_parent"
                style="@style/MoreTextStyle" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_line"></View>

            <TextView
                android:id="@+id/tv_more_share"
                android:text="分享给好友"
                android:drawableLeft="@mipmap/icon_more_share"
                android:layout_width="match_parent"
                style="@style/MoreTextStyle" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_line"></View>

            <TextView
                android:id="@+id/tv_more_about"
                android:text="软件说明"
                android:drawableLeft="@mipmap/icon_more_about"
                android:layout_width="match_parent"
                style="@style/MoreTextStyle" />



        </LinearLayout>


    </auto.cn.appinspection.ui.MyScrollView>

</LinearLayout>
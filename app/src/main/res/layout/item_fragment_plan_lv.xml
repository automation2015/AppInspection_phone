<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp"
    app:contentPadding="3dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top"
            android:layout_margin="3dp">
   <ImageView
       android:id="@+id/iv_plan_type"
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:src="@mipmap/icon_plan_type3"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tv_plan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="plan_name"
                android:textSize="18sp"
                android:textColor="@color/title_text"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/tv_plan_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="plan_id"
                android:textColor="@color/title_text"
                android:layout_margin="5dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_plan_shift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_plan_name"
                android:layout_centerInParent="true"
                android:text="每日三班"
                android:textColor="@color/title_text"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <!--<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="8dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right"/>
        </LinearLayout>-->
    </LinearLayout>

</android.support.v7.widget.CardView>

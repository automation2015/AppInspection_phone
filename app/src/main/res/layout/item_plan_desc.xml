<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp"
    app:contentPadding="3dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
    <TextView
       style="@style/text_area_check"
        android:text="区域名称："
       />
        <TextView
            android:id="@+id/tv_desc_area"
            style="@style/text_desc_data"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            style="@style/text_area_check"
            android:text="设备名称："
            />
        <TextView
            android:id="@+id/tv_desc_equip"
            style="@style/text_desc_data"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                style="@style/text_area_check"
                android:text="部位名称："
                />
            <TextView
                android:id="@+id/tv_desc_part"
                style="@style/text_desc_data"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                style="@style/text_area_check"
                android:text="项目名称："
                />
            <TextView
                android:id="@+id/tv_desc_item"
                style="@style/text_desc_data"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                style="@style/text_area_check"
                android:text="内容："
                />
            <TextView
                android:id="@+id/tv_desc_content"
                style="@style/text_desc_data"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                style="@style/text_area_check"
                android:text="基准："
                />
            <TextView
                android:id="@+id/tv_desc_standard"
                style="@style/text_desc_data"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                style="@style/text_area_check"
                android:text="状态："
                />
            <TextView
                android:id="@+id/tv_desc_status"
                style="@style/text_desc_data"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                style="@style/text_area_check"
                android:text="温度："
                />
            <TextView
                android:id="@+id/tv_desc_temprature"
                style="@style/text_desc_data"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp"
    app:contentPadding="3dp"
    >

    <RelativeLayout
        android:id="@+id/rl_desc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:padding="10dp">

    <LinearLayout
        android:id="@+id/ll_desc_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
    <TextView
       style="@style/text_area_check"
        android:text="区域名称："
       />
        <TextView
            android:id="@+id/tv_desc_area"
            style="@style/text_desc_data"
            />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_desc_area_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/ll_desc_area">
            <TextView
                style="@style/text_area_check"
                android:text="区域状态："
                />
            <TextView
                android:id="@+id/tv_desc_area_status"
                style="@style/text_desc_data"
                />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_desc_equip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/ll_desc_area_status">
        <TextView
            style="@style/text_area_check"
            android:text="设备名称："
            />
        <TextView
            android:id="@+id/tv_desc_equip"
            style="@style/text_desc_data"
            />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_desc_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/ll_desc_equip">
            <TextView
                style="@style/text_area_check"
                android:text="部位名称："
                />
            <TextView
                android:id="@+id/tv_desc_part"
                style="@style/text_desc_data"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_desc_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/ll_desc_part">
            <TextView
                style="@style/text_area_check"
                android:text="项目名称："
                />
            <TextView
                android:id="@+id/tv_desc_item"
                style="@style/text_desc_data"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_desc_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/ll_desc_item">
            <TextView
                style="@style/text_area_check"
                android:text="巡检内容："
                />
            <TextView
                android:id="@+id/tv_desc_content"
                style="@style/text_desc_data"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_desc_standard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/ll_desc_content">
            <TextView
                style="@style/text_area_check"
                android:text="巡检基准："
                />
            <TextView
                android:id="@+id/tv_desc_standard"
                style="@style/text_desc_data"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_desc_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/ll_desc_standard">
            <TextView
                style="@style/text_area_check"
                android:text="设备状态："
                />
            <TextView
                android:id="@+id/tv_desc_status"
                style="@style/text_desc_data"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_desc_temprature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/ll_desc_status">
            <TextView

                style="@style/text_area_check"
                android:text="温  度  值："
                />
            <TextView
                android:id="@+id/tv_desc_temprature"
                style="@style/text_desc_data"
                />
        </LinearLayout>
        <Button
            android:id="@+id/btn_desc_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_selector"
            android:text="查看异常照片"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:visibility="gone"
            android:layout_below="@id/ll_desc_temprature"/>
        <ImageView
            android:id="@+id/iv_desc_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_upload"
            android:scaleType="centerCrop"
            android:visibility="gone"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>